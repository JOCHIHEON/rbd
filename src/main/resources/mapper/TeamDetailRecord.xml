<mapper namespace="com.example.demo.TEAMDETAIL">
	<insert id="insertTeamDeRecord" parameterType="teamDeRecordVo">
		insert into team_detailrecord(team_code
		<if test="teamde_pts != null">, teamde_pts</if>
		<if test="teamde_lostpts != null">, teamde_lostpts</if>
		<if test="teamde_assist != null">, teamde_assist</if>
		<if test="teamde_reb != null">, teamde_reb</if>
		<if test="teamde_stl != null">, teamde_stl</if>
		<if test="teamde_blk != null">,teamde_blk</if>
		<if test="teamde_fg != null">, teamde_fg</if>
		<if test="teamde_threept != null">, teamde_threept</if>
		<if test="teamde_ft != null">, teamde_ft</if>
		<if test="teamde_fgp != null">, teamde_fgp</if>
		<if test="teamde_threeptp != null">, teamde_threeptp</if>
		<if test="teamde_ftp != null">, teamde_ftp</if>
		<if test="teamde_to != null">, teamde_to</if>		
		)values(
		#{team_code}
		<if test="teamde_pts != null">, #{teamde_pts}</if>
		<if test="teamde_lostpts != null">, #{teamde_lostpts}</if>
		<if test="teamde_assist != null">, #{teamde_assist}</if>
		<if test="teamde_reb != null">, #{teamde_reb}</if>
		<if test="teamde_stl != null">, #{teamde_stl}</if>
		<if test="teamde_blk != null">, #{teamde_blk}</if>
		<if test="teamde_fg != null">, #{teamde_fg}</if>
		<if test="teamde_threept != null">, #{teamde_threept}</if>
		<if test="teamde_ft != null">, #{teamde_ft}</if>
		<if test="teamde_fgp != null">, #{teamde_fgp}</if>
		<if test="teamde_threeptp != null">, #{teamde_threeptp}</if>
		<if test="teamde_ftp != null">, #{teamde_ftp}</if>
		<if test="teamde_to != null">, #{teamde_to}</if>	
		)
	</insert>
	<update id="updateTeamDeRecord" parameterType="teamDeRecordVo">
		update team_detailrecord
		<set>
			<if test="teamde_pts != null">teamde_pts = #{teamde_pts}</if>
			<if test="teamde_lostpts != null">, teamde_lostpts = #{teamde_lostpts}</if>
			<if test="teamde_assist != null">, teamde_assist = #{teamde_assist}</if>
			<if test="teamde_reb != null">, teamde_reb = #{teamde_reb}</if>
			<if test="teamde_stl != null">, teamde_stl = #{teamde_stl}</if>
			<if test="teamde_blk != null">, teamde_blk = #{teamde_blk}</if>
			<if test="teamde_fg != null">, teamde_fg = #{teamde_fg}</if>
			<if test="teamde_threept != null">, teamde_threept = #{teamde_threept}</if>
			<if test="teamde_ft != null">, teamde_ft = #{teamde_ft}</if>
			<if test="teamde_fgp != null">, teamde_fgp = #{teamde_fgp}</if>
			<if test="teamde_threeptp != null">, teamde_threeptp = #{teamde_threeptp}</if>
			<if test="teamde_ftp != null">, teamde_ftp = #{teamde_ftp}</if>
			<if test="teamde_to != null">, teamde_to = #{teamde_to}</if>	
		</set>
		where team_code = #{team_code}
	</update>
	<delete id="deleteTeamDeRecord" parameterType="teamDeRecordVo">
		delete from team_detailrecord
		where team_code = #{team_code}
	</delete>
	
	<select id="teamDeRecordView" parameterType="int"  resultType="teamDeRecordVo">
		select * from team_detailrecord where team_code = #{team_code}
	</select>
	<select id="teamDeRecordListView" parameterType="teamDeRecordVo" resultType="teamDeRecordVo">
		select * from team_detailrecord
	</select>
</mapper>